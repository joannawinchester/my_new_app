<div class="jumbotron">
	<h1>Get in touch!</h1>
</div>

<div class="container">
	<div class="row">
		<div class="col-md-6 col-xs-12">
			<div class="circle contact">
				<%= image_tag("email.png" ) %>
			</div>
			<h3>Email me at info[at]stitchphilly.com</h3>
		</div>
		<div class="col-md-6 col-xs-12">
			<div class="circle contact">
				<%= image_tag("news.png" ) %>
			</div>
			<h3>Sign up for the Stitch Philly newsletter</h3>
		</div>
	</div>
</div>

<h1 class="contact-us">Contact Us</h1>

<%= flash[:notice] %>

<%= form_tag("/static_pages/thank_you") do %>
<div class="row contact">
	<div class="col-md-12 contact">
		<div class="form-group">
			<%= label_tag :name, "Name" %>
			<%= text_field_tag :name, nil, class: "form-control", placeholder: "Enter Name" %>
		</div>
		<div class="form-group">
			<%= label_tag :email, "Email Address" %>
			<%= text_field_tag :email, nil, class: "form-control", placeholder: "Enter Email" %>
		</div>
		<div class="form-group">
			<%= label_tag :message, "Message" %>
			<%= text_area_tag :message, nil, class: "form-control", placeholder: "Enter Message" %>
		</div>
	</div>
</div>
<button class="contact">
	<%= submit_tag "Send" %>
</button>
<% end %>


