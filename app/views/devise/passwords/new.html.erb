<h2 class="sign-in">Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field sign-in">
    <%= f.email_field :email, placeholder: "Email", required: true, autofocus: true %>
  </div>

  <div class="actions sign-in sign-up">
    <%= f.submit "Send me reset instructions" %>
  </div>
<% end %>

<div class="sign-in bottom-link">
	<%= render "devise/shared/links" %>
</div>
