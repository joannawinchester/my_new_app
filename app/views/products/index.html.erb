<p id="notice"><%= notice %></p>

<div class="jumbotron">
  <h1>Services & Products</h1>
</div>

<div class="container products">
  <div class="row products">
    <table class="table table-hover table-responsive">
      <thead class="thead">
        <tr class="tr">
          <th class="th col-md-3 products"><h4>Name</h4></th>
          <th class="th col-md-3 products"><h4>Description</h4></th>
          <th class="th col-md-3 products"><h4>Image url</h4></th>
          <th class="th col-md-3 products" colspan="3"><h4></h4></th>
        </tr>
      </thead>

      <tbody>
        <% @products.each do |product| %>
          <tr :class => "crazy">
            <h2 :class => "loco"><%= product.name %></h2>
            <td class="td col-md-3 products"><%= product.name %></td>
            <td class="td col-md-3 products"><%= product.description %></td>
            <td class="td col-md-3 products"><%= product.image_url %></td>
            <td class="td col-md-3 products">
              <td class="td"><%= link_to 'Show', product %></td>
              <td class="td"><%= link_to 'Edit', edit_product_path(product) %></td>
              <td class="td"><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<br>


